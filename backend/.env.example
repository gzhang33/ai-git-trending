# OpenAI API Key and Base URL
# Fill in your own API Key and the corresponding Base URL
LLM_API_KEY="sk-your_api_key_here"
LLM_BASE_URL="https://api.openai.com/v1" # Or your custom base url
LLM_MODEL="gpt-4-turbo"

# GitHub API Token (optional but recommended for more detailed data)
GITHUB_API_TOKEN=""

# --- App Configuration ---
# Scheduled time to run the job every day (HH:MM format)
SCHEDULE_TIME="09:00"

# Web server port (default: 5001)
PORT=5001

# Number of new projects to summarize each day
NUM_PROJECTS_TO_SUMMARIZE=8

# Number of top trending projects to scrape from GitHub
MAX_PROJECTS_TO_SCRAPE=25

# Date range for GitHub Trending (daily, weekly, monthly)
TRENDING_DATE_RANGE="daily"

# Log level for the application (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"
